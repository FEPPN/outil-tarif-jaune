  <script>
    (function(){
      const $ = (s,root=document) => root.querySelector(s);

      const PHONE_TEL = 'tel:+33123456789'; // TODO: remplacez par le num√©ro final

      const form = $('#eligForm');
      const resultCard = $('#resultCard');
      const resetBtn = $('#resetBtn');
      const printBtn = $('#printBtn');
      const blocEmployes = $('#blocEmployes');
      const blocCA = $('#blocCA');

      // Affichage conditionnel entreprise vs copro
      form.addEventListener('change', ()=>{
        const typeClient = form.typeClient.value;
        const showCorp = typeClient === 'entreprise';
        blocEmployes.style.display = showCorp ? 'block' : 'none';
        blocCA.style.display    = showCorp ? 'block' : 'none';
      });

      // Helpers lecture valeurs
      function val(name){
        const el = form.elements[name];
        if(!el) return null;
        if(el instanceof RadioNodeList) return el.value || null;
        return el.value || null;
      }

      function ctaHTML(){
        return `
          <div class="cta-papernest" id="ctaPapernest">
            <p><strong>Envie de comparer les offres d'√©nergie pour votre entreprise ?</strong><br/>Trouvez l'offre id√©ale en cinq minutes avec papernest&nbsp;!</p>
            <a href="${PHONE_TEL}" aria-label="Appeler papernest">üìû Appeler maintenant</a>
          </div>`;
      }

      // >>> suppression de l'affichage "Que faire ensuite" dans le rendu
      function buildResult(status, title, reasons, suggestions, code, cuLuAdvice){
        const badge = status==='ok' ? '<span class="tj-badge ok">√âligible</span>' : '<span class="tj-badge ko">Non √©ligible</span>';
        const reasonsHtml = reasons && reasons.length ? `<ul class="tj-list">${reasons.map(r=>`<li>${r}</li>`).join('')}</ul>` : '';
        // const sugHtml = ...  // supprim√©
        const cuLuHtml = cuLuAdvice ? `<div class="tj-divider"></div><p><strong>Conseil CU vs LU :</strong> ${cuLuAdvice}</p>` : '';

        // R√©sultat + CTA (CTA affich√© uniquement apr√®s le calcul)
        resultCard.innerHTML = `
          <div class="tj-card" data-code="${code}">
            <div class="tj-body">
              <p>${badge}</p>
              <h4 style="margin-top:6px;">${title}</h4>
              ${reasonsHtml}
              ${cuLuHtml}
            </div>
          </div>
          ${ctaHTML()}
        `;
      }

      function adviseCULU(){
        const hp = val('hpmax');
        if(hp === '<2000') return 'Votre usage semble intermittent (&lt; 2 000 h/an √† puissance max) : la version <em>Courte Utilisation (CU)</em> est g√©n√©ralement plus adapt√©e (abonnement plus bas, kWh plus √©lev√©).';
        if(hp === '>=2000') return 'Votre usage semble √©tal√© (‚â• 2 000 h/an √† puissance max) : la version <em>Longue Utilisation (LU)</em> est souvent plus avantageuse (abonnement plus haut, kWh plus bas).';
        return 'Si vous utilisez votre puissance ‚â≤ 2 000 h/an, privil√©giez la <em>CU</em>. Au-del√†, privil√©giez la <em>LU</em>.';
      }

      form.addEventListener('submit', (e)=>{
        e.preventDefault();

        const typeClient = val('typeClient');
        const employes   = val('employes');
        const ca         = val('ca');
        const pmax       = val('pmax');
        const raccord    = val('raccord');
        const geo        = val('geo');

        // Validation minimale
        const required = ['typeClient','pmax','raccord','geo'];
        const missing = required.filter(n => !val(n));
        if(typeClient === 'entreprise'){
          if(!val('employes')) missing.push('employes');
          if(!val('ca'))       missing.push('ca');
        }
        if(missing.length){
          buildResult('ko', 'Veuillez compl√©ter les champs requis avant de lancer l‚Äô√©valuation.', missing.map(m=>`Champ manquant : <code>${m}</code>`), [], 'ERR_MISSING');
          return;
        }

        // R√®gles d‚Äô√©ligibilit√© 2025
        const isBT     = raccord === 'bt';
        const inRange  = pmax === '37-250';
        const inFrance = geo === 'france';

        let reasons = [];
        let code    = '';

        if(!isBT){
          code = 'NO_TJ_WIRING';
          reasons.push('Votre installation n‚Äôest pas en <strong>basse tension (BT)</strong>. Le Tarif Jaune ne s‚Äôapplique qu‚Äôen BT.');
        }
        if(!inRange){
          if(pmax === '<=36'){ code = 'NO_TJ_BLUE';  reasons.push('Votre puissance maximale est ‚â§ 36 kVA : vous relevez du <strong>Tarif Bleu</strong>.'); }
          if(pmax === '>250'){ code = 'NO_TJ_GREEN'; reasons.push('Votre puissance maximale est &gt; 250 kVA : vous relevez du <strong>Tarif Vert</strong>.'); }
        }
        if(!inFrance){
          code = 'NO_TJ_GEO';
          reasons.push('Le site n‚Äôest pas situ√© en <strong>France m√©tropolitaine continentale</strong>.');
        }

        // Conditions sociales/financi√®res (entreprise)
        let socialOk = true;
        if(typeClient === 'entreprise'){
          socialOk = (employes === '0-10') && (ca === '<=2m');
          if(employes !== '0-10') { code = 'NO_TJ_MARKET'; reasons.push('Votre structure compte <strong>11 salari√©s ou plus</strong> : non √©ligible au TRV Jaune.'); }
          if(ca !== '<=2m')       { code = 'NO_TJ_MARKET'; reasons.push('Votre <strong>CA/recettes/total bilan &gt; 2 M‚Ç¨</strong> : non √©ligible au TRV Jaune.'); }
        }

        const scopeOk = isBT && inRange && inFrance;
        const actorOk = (typeClient === 'copro') || (typeClient === 'entreprise' && socialOk);
        const eligible = scopeOk && actorOk;

        const suggestions = [];
        let title = '';
        let cuLu = adviseCULU();

        if(eligible){
          title = 'Bonne nouvelle : votre site est √©ligible au Tarif Jaune d‚ÄôEDF (TRV BT 37‚Äì250 kVA).';
          reasons = [
            'Crit√®res techniques remplis : <strong>BT</strong>, <strong>37‚Äì250 kVA</strong>, <strong>France m√©tropolitaine</strong>.',
            (typeClient==='copro' ? 'Profil copropri√©t√©/propri√©taire unique : pas de conditions d‚Äôeffectif/CA.' : 'Profil entreprise : ‚â§ 10 salari√©s et CA/recettes/bilan ‚â§ 2 M‚Ç¨.' )
          ];
          // suggestions (non affich√©es) conserv√©es si besoin futur
          suggestions.push('Pr√©parez l‚Äô<strong>attestation d‚Äô√©ligibilit√© √©lectronique</strong> pour la souscription.');
          suggestions.push('V√©rifiez la <strong>puissance optimale</strong> pour √©viter les d√©passements co√ªteux.');
          suggestions.push('Choisissez entre <strong>Courte Utilisation</strong> et <strong>Longue Utilisation</strong> selon votre profil d‚Äôusage.');
          buildResult('ok', title, reasons, suggestions, 'OK_TJ', cuLu);
          return;
        }

        // Non √©ligible : proposer la meilleure orientation (non affich√©e)
        if(pmax === '<=36'){
          suggestions.push('Consultez le <strong>Tarif Bleu</strong> (BT ‚â§ 36 kVA).');
        } else if(pmax === '>250'){
          suggestions.push('Consultez le <strong>Tarif Vert</strong> (HTA &gt; 250 kVA).');
        }
        if(typeClient === 'entreprise' && (!socialOk)){
          suggestions.push('Comparez les <strong>offres de march√©</strong> pour un profil de consommation type <strong>C4</strong>.');
        }
        if(!isBT)     suggestions.push('Confirmez votre sch√©ma de raccordement aupr√®s de votre installateur ou du GRD.');
        if(!inFrance) suggestions.push('V√©rifiez les offres disponibles dans votre zone g√©ographique.');

        title = 'Votre site n‚Äôest pas √©ligible au Tarif Jaune d‚ÄôEDF.';
        if(!reasons.length){ reasons.push('Un ou plusieurs crit√®res d‚Äô√©ligibilit√© ne sont pas respect√©s.'); }
        buildResult('ko', title, reasons, suggestions, code, null);
      });

      resetBtn.addEventListener('click', ()=>{
        form.reset();
        resultCard.innerHTML = '';
        // Affichage par d√©faut blocs entreprise jusqu‚Äô√† nouveau choix
        blocEmployes.style.display = 'block';
        blocCA.style.display = 'block';
      });

      printBtn.addEventListener('click', ()=> window.print());

      // √âtat initial : montrer employ√©s/CA tant que le type client n‚Äôest pas choisi
      blocEmployes.style.display = 'block';
      blocCA.style.display = 'block';
    })();
  </script>

